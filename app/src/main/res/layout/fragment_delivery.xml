<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:src="@drawable/box"
                app:civ_border_width="6dp"
                app:civ_border_color="#716C6C"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/UserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="Package Details"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="?attr/colorPrimary" />

            <TextView
                android:id="@+id/rName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/packagedetailset"
                android:paddingStart="16dp"
                android:layout_marginTop="10dp"
                android:drawableStart="@drawable/username"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:text="Mohammad ladadaweh"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#716C6C" />

            <TextView
                android:id="@+id/rPhone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/packagedetailset"
                android:paddingStart="16dp"
                android:layout_marginTop="1dp"
                android:drawableStart="@drawable/phone"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:text="213414124"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#716C6C" />

            <TextView
                android:id="@+id/sender"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/packagedetailset"
                android:paddingStart="16dp"
                android:drawableStart="@drawable/sender"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:text="ladadaweh"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#716C6C" />

            <TextView
                android:id="@+id/rPrice"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/packagedetailset"
                android:paddingStart="16dp"
                android:layout_marginTop="1dp"
                android:drawableStart="@drawable/price"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:text="1222"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#716C6C" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="177dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/PaymentMethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="Payment Method"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="?attr/colorPrimary" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:elevation="7dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioCash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:buttonTint="?attr/colorPrimary"
                    android:text="Cash"
                    android:textColor="#716C6C" />

                <RadioButton
                    android:id="@+id/radioVisa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:buttonTint="?attr/colorPrimary"
                    android:text="Credit Card"
                    android:textColor="#716C6C" />

                <RadioButton
                    android:id="@+id/radioApplePay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:buttonTint="?attr/colorPrimary"
                    android:text="ApplePay"
                    android:textColor="#716C6C" />

                <RadioButton
                    android:id="@+id/radioPaypal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:buttonTint="?attr/colorPrimary"
                    android:text="Paypal"
                    android:textColor="#716C6C" />
            </RadioGroup>

            <Button
                android:id="@+id/payButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="?attr/colorPrimary"
                android:text="Pay"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
